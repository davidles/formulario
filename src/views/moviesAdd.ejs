<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie add</title>
    <link rel="stylesheet" href="/css/cdn.jsdelivr.net_npm_bootstrap@5.3.2_dist_css_bootstrap.min.css">
    <link rel='stylesheet' href='/css/style.css' />
</head>

<body>
    <figure>
        <img src="/img/logo-DH.png" alt="Logo Digital House">
      </figure>
    <h1 class="moviesAddTitulo"></h1>
    <br>
    <section id="formulario" >
        <article class="mostrarFormulario">
            <ul class="errores"></ul>
            <form class="form" action="/movies/create" method="POST">
                <label for="title">Titulo </label>
                <div><input type="text" name="title" id="title" class="form-control" ></div>
                <label for="rating">Calificación </label>
                <div><input type="number" name="rating" id="rating" class="form-control"  placeholder="Indicar valor entre 0 y 10"> </div>
                <label for="awards">Premios </label>
                <div><input type="number" name="awards" id="awards" class="form-control"  placeholder="Indicar valor entre 0 y 10"></div>
                <label for="release_date">Fecha de creación </label>
                <div><input type="date" name="release_date" id="release_date" class="form-control"  ></div>
                <label for="length">Duración </label>
                <div><input type="number" name="length" id="length" class="form-control"  placeholder="Indicar duración entre 60 y 360 minutos" ></div>
                <label for="genreID">Género </label>
                <div>
                    <select name="genre_id" id="genre_id" class="form-select"  >
                        <option value="" disabled selected>- Seleccione el género - </option>
                        <% allGenres.forEach(genre => { %>
                        <option value="<%= genre.id %>"><%= genre.name %></option>
                        <% }); %>
                    </select>
                </div>
                <br>
                <div> <button class="botonAgregar" type="submit">Agregar</button>
                
                <a  class="botonVolver" href="/movies">Listado de Películas</a></div>
            </form>
        </article>
    </section>

    <script src="/js/moviesAddValidation.js"></script>
</body>
</html>